{
	"compilerOptions": {
		"lib": ["ES6","DOM"],
		"module": "CommonJS",
		"target": "ES6",

		"rootDir": "./_src",
		"outDir": "./lib",

		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["_src"],
	"exclude": [ "node_modules" ]
}